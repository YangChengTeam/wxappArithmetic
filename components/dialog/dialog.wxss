.mask {
   position: fixed;
   width: 100%;
   height: 100%;
   background: rgba(0,0,0,0.7);
   display: flex;
   flex-direction: column;
   align-items: center;
   left:0;
   opacity: 0;
   top: -100%;
   z-index: 10000;
}

.mask-content {
   display: flex;
   flex-direction: column;
   width: 510rpx;
   height: 100%;
   justify-content: center;
   align-items: center;
   top: -100%;
   opacity: 0;
   position: relative;
}
