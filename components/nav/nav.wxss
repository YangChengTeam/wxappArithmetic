/* components/nav/nav.wxss */

.titleBar {
   font-size: 34rpx;
   color: #000;
   text-align: center;
   position: relative;
}


.back {
   width: 100%;
   height: 100%;
   display: flex;
   align-items: center;
   position: absolute;
   left: 0;
   top: 0;
   z-index: 2;
}

.back-wrapper {
   height: 100%;
   display: flex;
   align-items: center;
   
}

.back image {
   width: 34rpx;
   height: 34rpx;
   margin-left: 20rpx;
}

.bar {
   position: fixed;
   left: 0;
   top: 0;
   z-index: 100;
}