/**app.wxss**/
page {
  width: 100%;
  background-color: #382198;
  color: white;
  height: 98.3%;
}

.container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    margin-top: 20rpx;
    width: 100%;
    height: 100%;
}

.main-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 1220rpx;
  z-index: -1;
}

.main-content {    
    width: 660rpx;
    height: 100%;
}

button, button::after {
    border: none;
}

.loading {
   width: 100%;
   height: 100%;
   display: flex;
   align-items: center;
   justify-content: center;
   position: absolute;
   left: 0;
   top: 0;
   
}

.loading > image {
  width: 527rpx;
  height: 426rpx;
  margin-top: -60rpx;
}

.ad {
   position: fixed;
   width: 100%;
   bottom: 0rpx;
   left: 0;
   z-index: 10001;
}