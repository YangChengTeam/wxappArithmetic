/**app.wxss**/

page {
  width: 100%;
  background-color: #300a67;
  color: white;
  height: 98.3%;
}

.container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  height: 100%;
}

.main-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 1220rpx;
  z-index: -1;
}

.main-content {
  width: 652rpx;
  height: 100%;
}

button, button::after {
  border: none;
}

.loading {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0;
}

.loading > image {
  width: 498rpx;
  height: 318rpx;
  margin-top: 200rpx;
}

.ad {
  position: fixed;
  width: 660rpx;
  height: 180rpx;
  left: 45rpx;
  bottom: 0rpx;
  z-index: 9000;
}
