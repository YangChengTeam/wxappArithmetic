/* pages/prize/prize.wxss */
.swiper-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.tab {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #29128a;
  width: 660rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.tab-item {
   font-size: 30rpx;
   width: 320rpx;
   height: 80rpx;
   line-height: 80rpx;
   text-align: center;
}

.tab-item-current {
  background-color: #ff5686;
  border-radius: 40rpx;
  font-weight: bold;
}

.swiper-content > swiper {
  width: 100%;
  height: 91.6%;
}

.prize-list {
   width: 100%;
}

.prize-list-item {
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   width: 660rpx;
   height: 360rpx;
   background-color: #8271c8;
   border-radius: 20rpx;
   margin-left: 45rpx;
   margin-top: 30rpx;
}

.prize-footer {
   width: 100%;
   height: 30rpx;
}

.prize-list-item:first-child {
   margin-top: 20rpx;
}

.prize-info {
    display: flex;
    flex-direction: column;
    width: 640rpx;
    height: 340rpx;
    border-radius: 15rpx;
    background-color: #ffffff;
    position: relative;
    justify-content: flex-end;
}

.prize-info > image {
   width: 640rpx;
   height: 340rpx;
   border-radius: 15rpx;
   background-color: #8271c8;
   position: absolute;
   top: 0;
   left: 0;
}

.prize-desp {
   width: 100%;
   height: 80rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: space-around;
   position: absolute;
   background-color:rgba(255, 255, 255, 0.8);
   border-bottom-left-radius: 15rpx;
   border-bottom-right-radius: 15rpx;
   bottom: 0;
   left: 0;
}

.prize-name {
   color: #000;
   font-size: 32rpx;
   margin-left: 30rpx;
   width: 280rpx;
}
.prize-money {
   color: #999;
   font-size: 24rpx;
   margin-left: 30rpx;
   width: 110rpx;
}



.prize-desp > button {
   height: 60rpx;
   width: 150rpx;
   border-radius: 30rpx;
   background-color: #fa5283;
   font-size: 30rpx;
   color: #fff;
   line-height: 60rpx;
   margin-right: 10rpx;
}

.prize-desp > .status {
   height: 60rpx;
   width: 150rpx;
   font-size: 24rpx;
   color: #ff5686;
   text-align: right;
   line-height: 60rpx;
   padding-right: 20rpx;
}

.scroll-views {
   height: 100%;
}

.mask {
   position: fixed;
   width: 100%;
   height: 100%;
   background: rgba(0,0,0,0.7);
   display: flex;
   top:0;
   left:0;
   opacity: 0;
   top: -100%;
}

.mask-content-wrap {
   display: flex;
   flex-direction: column;
   width: 100%;
   height: 100%;
   justify-content: center;
   align-items: center;
   top: -100%;
   opacity: 0;
   position: relative;
}


.mask-content-wrap > .close {
   width: 48rpx;
   height: 48rpx;
   margin-top: 60rpx;
}


.mask-content {
   display: flex;
   flex-direction: column;
   background-color: #fff;
   border-radius: 10rpx;
   align-items: center;
   width: 520rpx;
   height: 564rpx;
}

.mask-content .title {
   font-size: 36rpx;
   text-align: center;
   color: #000;
   margin-top: 30rpx;
   margin-bottom: 10rpx;
}

.mask-content input {
   font-size: 24rpx;
   height: 80rpx;
   padding-left: 10rpx; 
   padding-right: 10rpx; 
   width: 440rpx;
   border-radius: 8rpx;
   color: #000;
   background-color: #f0f0f0;
   margin-top: 20rpx;
   text-align: center;
}

.mask-content .submit {
   font-size: 30rpx;
   height: 90rpx;
   width: 440rpx;
   border-radius: 45rpx;
   line-height: 90rpx;
   background-color: #382198;
   color: #fff;
   text-align: center;
   margin-top: 30rpx;
}



