/* pages/cooperation/cooperation.wxss */
page {
   background: #f5f5f5;
}

.cooperation-content {
   width: 100%;
   height: 100%;
}

.desp {
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   color: #000;
   font-size: 24rpx;
   width: 100%;
   height: 200rpx;
}

.desp view {
   margin-bottom: 10rpx;
}

.item {
   height: 90rpx;
   margin-left: 20rpx;
   width: 710rpx;
   background: #fff;
   margin-bottom: 20rpx;
   display: flex;
   flex-direction: row;
}

.item input {
   line-height: 90rpx;
   height: 90rpx;
   margin-left: 40rpx;
   width: 620rpx;
   font-size: 24rpx;
   color: #000;
}

.upload-info {
   display: flex;
   flex-direction: row;
   color: #a0a0a0;
   font-size: 24rpx;
   align-items: flex-end;
   height: 140rpx;
   margin-left: 20rpx;
   margin-bottom: 20rpx;
}

.item view {
   color: #ff2626;
   line-height: 90rpx;
   height: 90rpx;
}

.upload {
   background: #fff;
   width: 140rpx;
   height: 140rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   position: relative;
   color: #000;
   font-size: 24rpx;
}

.upload image {
  width: 42rpx;
  height: 42rpx;
}

.upload view {
   position: absolute;
   color: #a1a1a1;
   top: 100rpx;
}

.btn {
   width: 100%;
   display: flex;
   justify-content: center;
   align-items: center;
   font-size: 30rpx;
   height: 92rpx;
   position: relative;
   margin-top: 40rpx;
}

.btn image {
   width: 710rpx;
   height: 92rpx;
}

.btn view {
   position:  absolute;
   width: 100%;
   text-align: center;
}

.desc {
   margin-left: 20rpx;
}

image.pic {
   position: absolute;
   left: 0;
   top: 0;
   width: 140rpx;
   height: 140rpx;
}