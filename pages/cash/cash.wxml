<!--pages/cash/cash.wxml-->
<view class="container">
  <view class="loading" hidden='{{isShowContent}}'>
    <image src="../../assets/images/loading.png"></image>
  </view>

  <view class="cash-content" hidden='{{!isShowContent}}'>
    <image class="bg" src="../../assets/images/cash-bg.png"></image>
    <image class="bg2" src="../../assets/images/cash-bg2.png"></image>
    <nav></nav>
    <view class="cash">
      <input type='text' bindinput="getMoneyCode" placeholder='请输入提现码' value='{{money_code}}'></input>
    </view>

    <view class="cash-submit">
      <image src="../../assets/images/cash-btn.png"></image>
      <button open-type='getUserInfo' bindgetuserinfo="loginToCash"></button>
    </view>
    <view class="other">
      <image src="../../assets/images/cash-more.png" class="cash-record" bindtap='redirectToIndex'></image>
      <image src="../../assets/images/cash-record.png" class="continue" bindtap='navigateToCaseRecord'></image>
    </view>
    <view class="question2">
      <view style='font-size: 28rpx;font-weight: bold;'>温馨提醒:</view>
      <view wx:for="{{ruleList}}" wx:for-index="index" wx:for-item="item" wx:key="id">
        {{index+1}}. {{item}}</view>
    </view>
  </view>
</view>