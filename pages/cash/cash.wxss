/* pages/cash/cash.wxss */

.bg {
   position: absolute;
   width: 750rpx;
   height: 770rpx;
   top: 0;
   left: 0;
   z-index: -1;
}

.bg2 {
   position: absolute;
   width: 750rpx;
   height: 200rpx;
   bottom: 0;
   left: 0;
   z-index: -1;
}

.cash-content {
   position: relative;
   z-index: 2;
   display: flex;
   flex-direction: column;
   align-items: center;
   background: #ed5c5a;
   height: 100%;
   width: 100%;
}


.cash {
   background: #fff;
   width: 600rpx;
   height: 120rpx;
   box-shadow: 0 3rpx 0 #e0dfdf;
   display: flex;
   flex-direction: row;
   align-items: center;
   margin-top: 430rpx;
}

.cash > input {
   margin-left: 40rpx;
   font-size: 36rpx;
   width: 520rpx;
   color: #000;
   text-align: center;
}

.cash-submit {
   width: 564rpx;
   height: 104rpx;
   color: #fff;
   font-size: 30rpx;
   line-height: 90rpx;
   border-radius: 8rpx;
   margin-top: 40rpx;
}

.other {
   width: 564rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-around; 
   margin-top: 30rpx;  
}

.other image {
   width: 272rpx;
   height: 88rpx;
}

.question2 {
   color: #fff;
   font-size: 24rpx;
   width: 600rpx;
   display: flex;
   flex-direction: column;
   margin-top: 50rpx;
}

.question2 > view {
   margin-top: 10rpx;
}

