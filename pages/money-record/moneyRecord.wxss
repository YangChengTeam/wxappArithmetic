/* pages/money-record/moneyRecord.wxss */
.record-list {
   display: flex;
   flex-direction: column;
   align-items: center;
   width: 100%;
}

.record-list-item {
   background: #fff;
   border-radius: 8rpx;
   width: 660rpx;
   height: 122rpx;
   margin-bottom: 20rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: space-between;
}

.info {
   display: flex;
   flex-direction: column;
   justify-content: center;
   height: 100%;
}

.info > .money {
   color: #000;
   font-size: 30rpx;
   margin-left: 40rpx;
}

.info > .time {
   color: #aaa;
   font-size: 30rpx;
   margin-left: 40rpx;
}

.get {
   color: #000;
   font-size: 30rpx;
   margin-right: 60rpx;
}

.user-money-take {
   position: relative;
   width: 186rpx;
   height: 68rpx;
   font-size: 30rpx;
   margin-right: 20rpx;
}

.user-money-take > image {
    width: 186rpx;
    height: 68rpx;
    position: absolute;
}

.user-money-take > view {
   position: absolute;
   width: 186rpx;
   height: 68rpx;
   line-height: 68rpx;
   text-align: center;
}

.mask {
   position: fixed;
   width: 100%;
   height: 100%;
   background: rgba(0,0,0,0.7);
   display: flex;
   flex-direction: column;
   align-items: center;
   top:0;
   left:0;
}

.mask-content {
   display: flex;
   flex-direction: column;
   width: 510rpx;
   height: 100%;
   align-items: center;
   top: -100%;
   opacity: 0;
   position: relative;
}


.mask-content > .fail {
   width: 485rpx;
   height: 193rpx;
   position: relative;
   top: 50rpx;
   left: 30rpx;
}


.mask-main-content {
   display: flex;
   flex-direction: column;
   justify-content:flex-start;
   align-items: center;
   width: 510rpx;
   height: 572rpx;
   background-color: #fff;
   border-radius: 15rpx;
   margin-top: -60rpx;
}

.succ  .mask-main-content {
   height: 722rpx;
   width: 512rpx;
}

.succ {
   width: 512rpx;
   margin-top: 140rpx;
}

.succ .title {
   margin-top: 36rpx;
   color: #fff;
   font-size: 40rpx;
}

.succ .avatar {
   width: 180rpx;
   height: 180rpx;
   margin-top: 20rpx;
   border-radius: 50%;
}

.succ .desp {
   font-size: 30rpx;
   margin-top: 20rpx;
}

.succ .desp2 {
   font-size: 36rpx;
   margin-top: 10rpx;
   color: #ecc47f;
}

.succ > .mask-main-content {
  margin-top: 0;
  background: rgba(0,0,0,0.0);
  z-index: 100;
}

.mask-content > .succ-header {
   width: 512rpx;
   height: 722rpx;
   position: absolute;
   top: 0;
}

.mask > .win-header {
   width: 750rpx;
   height: 500rpx;
   position: absolute;
   z-index: -1;
   top:170rpx;
   left: 0rpx;
  
}

.mask-succ {
   opacity: 0;
   top: -100%;
}

.mask-content > .close {
   width: 48rpx;
   height: 48rpx;
   margin-top: 60rpx;
   
}

.open-money {
   margin-top: 40rpx;
   width: 182rpx;
   height: 182rpx;
   opacity: 0;
}