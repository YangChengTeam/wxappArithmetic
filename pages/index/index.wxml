<!--index.wxml-->
<view class="container">
  <image class="bg-header" src="../../assets/images/index-header.png" hidden='{{!isShowContent}}'></image>

  <view class="zlhb" wx:if="{{status}}">
    <view class="zlhb-wrapper">
      <image src="{{zlhbImg}}" hidden='{{!isShowContent}}'></image>
      <form bindsubmit='submit' report-submit>
        <button form-type='submit' open-type='getUserInfo' bindgetuserinfo="loginToZlhb"></button>
      </form>
    </view>
  </view>
  <view class="loading" hidden='{{isShowContent}}'>
    <image src="../../assets/images/loading.png"></image>
  </view>
  <view class="main-content-wrapper" hidden='{{!isShowContent}}'>
    <view animation="{{gameStart_animationData}}" bindtouchstart='start' bindtouchend='end' data-index="0" bindtouchcancel='end' class="game-start">
      <image src="../../assets/images/game-start.png"></image>
      <form bindsubmit='submit' report-submit>
        <button form-type='submit' open-type='getUserInfo' bindgetuserinfo="loginToStart"></button>
      </form>
    </view>

    <view animation="{{share_animationData}}" bindtouchstart='start' bindtouchend='end' data-index="1" bindtouchcancel='end' class="game-start" wx:if="{{status}}">
      <image src="../../assets/images/share.png"></image>
      <button form-type='submit' open-type='share' bindgetuserinfo="loginToStart"></button>
    </view>
    <view class="other-games">
      <view class="other-game-item" wx:for="{{appInfo.more_app_info}}" wx:for-index="index" wx:for-item="item" wx:key="id">
        <block wx:if="{{item.is_bind}}">
          <view wx:if="{{mini == -1}}" class="bg mini" bindtap='natiageToMiniProgram' data-appid="{{item.url}}">
            <image class="bg" src='../../assets/images/other-game-bg.png'></image>
          </view>
          <navigator wx:if="{{mini >-1 }}" class="bg mini" target="miniProgram" app-id='{{item.url}}' appId='{{item.url}}'>
            <image class="img" src='../../assets/images/other-game-bg.png'></image>
          </navigator>
        </block>
        <block wx:else>
          <view class="bg mini" bindtap='previewImg' data-img="{{item.xcx_img}}">
            <image class="bg" src='../../assets/images/other-game-bg.png'></image>
          </view>
        </block>
        <image class="img" src='{{item.img}}'></image>
      </view>
    </view>

    <view class="menu">
      <image class="line" src="../../assets/images/menu-cross-line.png"></image>
      <view class="menu-wrapper">
        <view class="menu-item">
        <image animation="{{rule_animationData}}" bindtouchstart='start' bindtouchend='end' data-index="2" bindtouchcancel='end' class="rule" src="../../assets/images/game-rule.png" bindtap='navigateToRule'></image>
        <view>规则</view>
        </view>
        <view class="more menu-item">
        <image animation="{{prize_animationData}}" bindtouchstart='start' bindtouchend='end' data-index="3" bindtouchcancel='end' class="prize" src="../../assets/images/game-prize.png"></image>  
         <view>提现</view>
         <form bindsubmit='submit' report-submit>
            <button form-type='submit' open-type='getUserInfo' bindgetuserinfo="loginToCash"></button>
          </form>
         </view>
        <view animation="{{more_animationData}}" bindtouchstart='start' bindtouchend='end' data-index="4" bindtouchcancel='end' class="more menu-item">
          <image src="../../assets/images/more.png"></image>
          <view>更多好玩</view>
          <block wx:if="{{adInfo.url}}">
          <view wx:if="{{mini == -1}}" class="mini2" bindtap='natiageToMiniProgram' data-appid="{{adInfo.url}}">
          </view>
          <navigator wx:if="{{mini >-1 }}" class="mini2" target="miniProgram" app-id='{{adInfo.url}}' appId='{{adInfo.url}}'>
          </navigator>
        </block>
         <block wx:else>
          <view class="mini2" bindtap='previewImg' data-img="{{adInfo.xcx_img}}">
          </view>
        </block>
        </view>
      </view>
    </view>
  </view>


</view>

<view class="mask mask-share" animation="{{animationDataMaskShare}}">
    <view class="mask-content share" animation="{{animationDataShare}}">
      <view class="main-share">
        <image class="share-img" src="../../assets/images/share-bg.png"></image>
        <view class="share-part">
          <image class="share-more" src="../../assets/images/share-more.png"></image>
          <view class="share-desp">分享到群,即可获得挑战机会</view>
          <view class="share-desp">今日分享过的群，不会得挑战机会哟</view>
        </view>
        <view class="share-part2">
         <view class="share-part2-wrapper">
          <image src='../../assets/images/share-btn.png'></image>
          <button open-type='share'></button>
          </view>
        </view>
      </view>

      <image class="close" src='../../assets/images/close.png' bindtap='closeShare'></image>
    </view>
    
  </view>

<view class="mask mask-hb" animation="{{animationDataMaskHb}}">
  <view class="mask-content" animation="{{animationDataHb}}">
    <view class="part1">
      <image class="zlhb-part1-bg" src='../../assets/images/zlhb-part1-bg.png'></image>
      <view class="max-money">每日签到红包</view>
      <view class="zlhb-get-money" bindtap='navagateToPrizee'>
        <image src='../../assets/images/zlhb-get-money.png'></image>
      </view>
    </view>
    <image class="close" src='../../assets/images/close.png' bindtap='closeHb'></image>
  </view>
</view>
<ad wx:if='{{isShowContent}}' class="ad" unit-id="adunit-5858471de43e4462"></ad>