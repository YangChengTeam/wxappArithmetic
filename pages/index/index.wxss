/**index.wxss**/

.user-related {
   display: flex;
   justify-content: center;
   align-items: center;
   width: 100%;
   height: 250rpx;
   position: relative;
}


.user-related > .login {
   width: 102rpx;
   height: 102rpx;
   left: 30rpx;
   top: 30rpx;
   position: absolute;
   opacity: 0;
}

.user-related > .nologin {
   width: 100%;
   height: 100%;
   left: 0rpx;
   top: 0rpx;
   position: absolute;
   opacity: 0;
}

.user-related > image {
   position: absolute;
   left: 0;
   top:0;
   width: 100%;
   height: 100%;
}

.user-info-wrap {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top:0;
}

.user-info {
   display: flex;
   flex-direction: row;
   margin-left: 30rpx;
   margin-top: 30rpx;
   align-items: center;
   width: 100%;
   height: 108rpx;
}

.user-info-desc {
   margin-left: 40rpx;
}
image.help {
  
   width: 40rpx;
   height: 40rpx;
 
}

.user-head {
   width: 104rpx;
   height: 104rpx;
   border-radius: 50%;
   border: solid 4rpx rgba(217,207,232,0.8);
}

.username {
   font-size: 30rpx;
}

.user-game-info {
   display: flex;
   flex-direction: row;
   font-size: 24rpx;
   justify-content: space-between;
   
}

.user-info-prize {
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
}

.user-prize-bg {
  display: flex;
   width: 320rpx;
   height: 60rpx;
   border-radius: 10rpx;
   background: rgba(0,0,0,0.2);
   margin-left: 30rpx;
  
   flex-direction: row;
   font-size: 24rpx;
   align-items: center;
}



.user-prize-bg > image {
   width: 47rpx;
   height: 47rpx;
   margin-left: 16rpx;
}

.user-money-title {
   margin-left: 16rpx;
}

.user-money {
  margin-left: 16rpx;
  color: #fdce0f;
}

.user-money-take {
   position: relative;
   width: 186rpx;
   height: 68rpx;
   font-size: 30rpx;
   margin-left: 50rpx;
}

.user-money-take > image {
    width: 186rpx;
    height: 67rpx;
    position: absolute;
}


.user-score {
   margin-left: 60rpx;
}

.game-related {
   display: flex;
   flex-direction: row;
   width: 100%;
   height: 390rpx;
   margin-top: 26rpx;
   justify-content: space-between;

}

.game-start {
   width: 317rpx;
   height: 100%;
   position: relative;
}

.game-start > button {
   width: 100%;
   height: 100%;
   position: absolute;
   opacity: 0;
}

.game-start > image {
   width: 100%;
   height: 100%;
   left:0;
   top:0;
   position: absolute;
}

.game-challenge-times {
   position: absolute;
   left:22rpx;
   top:100rpx;
   font-size: 24rpx;
}

.game-excite {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   width: 317rpx;
}

.game-excite > image {
    width: 100%;
    height: 182rpx;
}

.game-prize {
    width: 100%;
    height: 182rpx;
    position: relative;
}

.game-prize > image {
    width: 100%;
    height: 100%;
    position: absolute;
}

.game-prize-text {
   position: absolute;
   left:22rpx;
   top:80rpx;
   font-size: 24rpx;
}

.invite {
   width: 100%;
   height: 210rpx;
   margin-top: 26rpx;
   position: relative;
}

.invite > image {
   width: 100%;
   height: 100%;
   position: absolute;
}

.invite-text {
  position: absolute;
  left: 22rpx;
  top: 90rpx;
  font-size: 24rpx;
}

.invite > button {
   width: 100%;
   height: 100%;
   position: absolute;
   opacity: 0;
}

.more {
   display: flex;
   flex-direction: row;
   margin-top: 26rpx;
   width: 100%;
   height: 182rpx;
   justify-content: space-between;
}

.more > image {
   width: 317rpx;
   height: 100%;
}