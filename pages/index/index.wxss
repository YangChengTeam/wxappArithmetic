/**index.wxss**/
.container {
   position:  absolute;
   left: 0;
   top: 0;
}
.share {
  position: absolute;
  right: 0;
  top: 460rpx;
  width: 132rpx;
  height: 216rpx;
  z-index: 9999;
}

share-wrapper {
  width: 132rpx;
  height: 216rpx;
  position: relative;
}

.share-wrapper image, .share-wrapper form, .share-wrapper button {
  width: 132rpx;
  height: 216rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.share-wrapper button {
  opacity: 0;
}

.main-content-wrapper {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

swiper {
  width: 100%;
  height: 280rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  position: relative;
}

.swiper-item-img, .swiper-item-btn, .swiper-item-nav {
  width: 710rpx;
  height: 280rpx;
}

.swiper-item-btn {
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
}

swiper-item image {
  border-radius: 10rpx;
}

.top-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.top-item {
  width: 50%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.top-item image {
  width: 345rpx;
  height: 150rpx;
  position: relative;
}

.top-item-wrapper {
  width: 345rpx;
  height: 150rpx;
  position: relative;
}

.top-item-wrapper image, .top-item-wrapper button {
  position: absolute;
  width: 345rpx;
  height: 150rpx;
  left: 0;
  top: 0;
  border-radius: 10rpx;
}

.top-item-wrapper button {
  opacity: 0;
}

.more-list {
  margin-top: 20rpx;
  border-top: solid #ddd 1rpx;
  width: 100%;
}

.more-list-item {
  display: flex;
  flex-direction: row;
  width: 710rpx;
  height: 160rpx;
  background-color: #fff;
  align-items: center;
  border-bottom: solid #ddd 1rpx;
  margin-left: 20rpx;
}

.more-list-item:last-child {
  border-bottom: none;
}

.wxapp-head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f9adc8;
}

.wxapp-info {
  display: flex;
  flex-direction: column;
  width: 340rpx;
  margin-left: 25rpx;
}

.wxapp-info > .wxapp-name {
  font-size: 30rpx;
  color: #000;
}

.wxapp-info > .wxapp-desp {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  height: 70rpx;
  overflow: hidden;
}

.wxapp-go {
  display: flex;
  flex-direction: column;
  color: #f00;
  font-size: 26rpx;
  justify-content: center;
  align-items: flex-end;
  margin-left: 20rpx;
  width: 225rpx;
}

.wxapp-go > .mini {
  height: 50rpx;
  width: 120rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  position: relative;
  margin-top: 10rpx;
}

.mini image, .mini view, .mini button {
  height: 50rpx;
  width: 120rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.mini button {
  opacity: 0;
}



 /* user_center */

.user-related {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 360rpx;
  position: relative;
}

.user-related > image {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 360rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 360rpx;
  position: absolute;
  z-index: 1;
  left: 0rpx;
  top: 0rpx;
}

.user-head {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: solid 5rpx #fff;
  margin-top: 125rpx;
  overflow: hidden;
}

.username {
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #000;
}

.menu {
  width: 100%;
  margin-top: 25rpx;
}

.menu-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 710rpx;
  height: 100rpx;
  color: #000;
  font-size: 30rpx;
  position: relative;
  border-radius: 20rpx;
  background: #fff;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.menu-item > .icon {
  width: 52rpx;
  height: 52rpx;
  margin-left: 20rpx;
}

.menu-item > .arrow {
  width: 26rpx;
  height: 26rpx;
}

.menu-item > button {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100rpx;
  left: 0;
  top: 0;
}

.menu-item view {
  width: 570rpx;
  margin-left: 20rpx;
}



/* tab */
.tab {
  width: 100%;
  height: 150rpx;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
}

.main-tab {
  width: 100%;
  height: 100rpx;
  border-top: solid 1rpx #e5e9f4;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  background: #fff;
  position: relative;
}

.tab-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 26rpx;
  position: absolute;
  z-index: 2;
}

.tab-item0 {
  width: 40%;
  height: 100%;
  left: 0;
}

.tab-item1 {
  left: 60%;
  width: 40%;
  height: 100%;
}

.tab-item > image {
  width: 45rpx;
  height: 43rpx;
}

.tab-item > .text {
  margin-left: 15rpx;
}

.login {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
}

.cover {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0;
}

.semi-circle {
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  border: solid #e5e9f4 1.5rpx;
  background: #fff;
}

.cover .cover2 {
  height: 130rpx;
  width: 130rpx;
  background: #fff;
  margin-top: 54rpx;
}

.tab-zlhb {
  width: 175rpx;
  height: 120rpx;
  position: relative;
}

.tab-zlhb image, .tab-zlhb button {
  width: 175rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.tab-zlhb image {
   left: -3rpx;
   top: 10rpx;
}

.tab-zlhb button {
   opacity: 0;
}



