/**index.wxss**/

.user-related {
   display: flex;
   justify-content: center;
   align-items: center;
   width: 100%;
   height: 200rpx;
   position: relative;
}

.user-related > button {
   width: 660rpx;
   height: 200rpx;
   left: 0;
   top: 0;
   position: absolute;
   opacity: 0;
}

.user-related > image {
   position: absolute;
   left: 0;
   top:0;
   width: 100%;
   height: 100%;
}

.user-info-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top:0;
}

.user-info {
   display: flex;
   flex-direction: row;
   align-items: center;
   width: 100%;
   height: 120rpx;
   margin-left: 30rpx;
}

.user-head {
   width: 120rpx;
   height: 120rpx;
   background-color: white;
   border-radius: 50%;
   border: solid 6rpx #f9adc8;
}

.username {
   font-size: 30rpx;
}

.user-desp {
   margin-left: 30rpx;
}

.user-game-info {
   display: flex;
   flex-direction: row;
   font-size: 24rpx;
   margin-top: 10rpx;
}

.user-score {
   margin-left: 60rpx;
}

.game-related {
   display: flex;
   flex-direction: row;
   width: 100%;
   height: 390rpx;
   margin-top: 20rpx;
   justify-content: space-between;

}

.game-start {
   width: 317rpx;
   height: 100%;
   position: relative;
}

.game-start > image {
   width: 100%;
   height: 100%;
   left:0;
   top:0;
   position: absolute;
}

.game-challenge-times {
   position: absolute;
   left:22rpx;
   top:100rpx;
   font-size: 24rpx;
}

.game-excite {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   width: 317rpx;
}

.game-excite > image {
    width: 100%;
    height: 182rpx;
}

.game-prize {
    width: 100%;
    height: 182rpx;
    position: relative;
}

.game-prize > image {
    width: 100%;
    height: 100%;
    position: absolute;
}

.game-prize-text {
   position: absolute;
   left:22rpx;
   top:80rpx;
   font-size: 24rpx;
}

.invite {
   width: 100%;
   height: 210rpx;
   margin-top: 20rpx;
   position: relative;
}

.invite > image {
   width: 100%;
   height: 100%;
   position: absolute;
}

.invite-text {
  position: absolute;
  left: 22rpx;
  top: 90rpx;
  font-size: 24rpx;
}

.invite > button {
   width: 100%;
   height: 100%;
   position: absolute;
   opacity: 0;
}

.more {
   display: flex;
   flex-direction: row;
   margin-top: 20rpx;
   width: 100%;
   height: 182rpx;
   justify-content: space-between;
}

.more > image {
   width: 317rpx;
   height: 100%;
}