/**index.wxss**/
.version {
   position: absolute;
   text-align: center;
   color: #fff;
   font-size: 22rpx;
   width: 100%;
   left: 0;
   bottom: 0;
   height: 40rpx;
}

.sign {
  position: fixed;
  width: 200rpx;
  height: 120rpx;
  z-index: 1000;
  left: 0;
  top:480rpx;
}

.contact {
  position: fixed;
  width: 105rpx;
  height: 183rpx;
  z-index: 1000;
  right: 0;
  top:250rpx;
}

.contact > image {
  position: absolute;
  width: 105rpx;
  height: 183rpx;
}

.contact > form, .contact button {
  position: absolute;
  width: 105rpx;
  height: 183rpx;
  opacity: 0;
}

.user-related {
   display: flex;
   justify-content: center;
   align-items: center;
   width: 100%;
   height: 250rpx;
   position: relative;
}


.user-related > .login {
   width: 102rpx;
   height: 102rpx;
   left: 30rpx;
   top: 30rpx;
   position: absolute;
   opacity: 0;
}

.user-related > .nologin {
   width: 100%;
   height: 100%;
   left: 0rpx;
   top: 0rpx;
   position: absolute;
   opacity: 0;
}

.user-related > image {
   position: absolute;
   left: 0;
   top:0;
   width: 100%;
   height: 100%;
}

.user-info-wrap {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top:0;
}

.user-info {
   display: flex;
   flex-direction: row;
   margin-left: 30rpx;
   margin-top: 30rpx;
   align-items: center;
   width: 100%;
   height: 108rpx;
}

.user-info-desc {
   margin-left: 40rpx;
}
image.help {
  
   width: 40rpx;
   height: 40rpx;
 
}

.user-head {
   width: 104rpx;
   height: 104rpx;
   border-radius: 50%;
   border: solid 4rpx rgba(217,207,232,0.8);
}

.username {
   font-size: 30rpx;
}

.user-game-info {
   display: flex;
   flex-direction: row;
   font-size: 24rpx;
   justify-content: space-between;
   
}

.user-info-prize {
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
}

.user-prize-bg {
  display: flex;
   width: 320rpx;
   height: 60rpx;
   border-radius: 10rpx;
   background: rgba(0,0,0,0.2);
   margin-left: 30rpx;
  
   flex-direction: row;
   font-size: 24rpx;
   align-items: center;
}



.user-prize-bg > image {
   width: 47rpx;
   height: 47rpx;
   margin-left: 16rpx;
}

.user-money-title {
   margin-left: 16rpx;
}

.user-money {
  margin-left: 16rpx;
  color: #fdce0f;
}

.user-money-take {
   position: relative;
   width: 186rpx;
   height: 68rpx;
   font-size: 30rpx;
   margin-left: 50rpx;
}

.user-money-take > image {
    width: 186rpx;
    height: 68rpx;
    position: absolute;
}

.user-money-take > view {
   position: absolute;
   width: 186rpx;
   height: 68rpx;
   line-height: 68rpx;
   text-align: center;
}

.user-score {
   margin-left: 60rpx;
}

.game-related {
   display: flex;
   flex-direction: row;
   width: 100%;
   height: 392rpx;
   margin-top: 22rpx;
   justify-content: space-between;
}

.game-start {
   width: 319rpx;
   height: 100%;
   position: relative;
}

.game-start  form, .game-start  button {
   width: 100%;
   height: 100%;
   position: absolute;
   opacity: 0;
}

.game-start > image {
   width: 100%;
   height: 100%;
   left:0;
   top:0;
   position: absolute;
}

.game-challenge-times {
   position: absolute;
   left:22rpx;
   top:100rpx;
   font-size: 24rpx;
}

.game-excite {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   width: 319rpx;
}

.game-excite > image {
    width: 100%;
    height: 392rpx;
}

.invite {
   width: 100%;
   height: 212rpx;
   margin-top: 22rpx;
   position: relative;
}

.invite > image {
   width: 100%;
   height: 100%;
   position: absolute;
}

.invite-text {
  position: absolute;
  left: 30rpx;
  top: 90rpx;
  font-size: 24rpx;
}

.invite > button {
   width: 100%;
   height: 100%;
   position: absolute;
   opacity: 0;
}

.more {
   display: flex;
   flex-direction: row;
   margin-top: 22rpx;
   width: 100%;
   height: 184rpx;
   justify-content: space-between;
}

.more image {
   width: 319rpx;
   height: 184rpx;
}

.more-usercenter {
    position: relative;
    width: 319rpx;
    height: 184rpx;
}

.more-usercenter > image , .more-usercenter > button {
   width: 319rpx;
   height: 184rpx;
   position: absolute;
   left: 0;
   top: 0;
}

.more-usercenter > button {
   opacity: 0;
}

.mask {
   position: fixed;
   width: 100%;
   height: 100%;
   background: rgba(0,0,0,0.7);
   display: flex;
   flex-direction: column;
   align-items: center;
   top: -100%;
   left: 0;
   opacity: 0;
   z-index: 10000;
}

.mask-content {
   display: flex;
   flex-direction: column;
   width: 100%;
   height: 100%;
   align-items: center;
   top: -100%;
   left: 0;
   opacity: 0;
   position: relative;
   
}

.mask-content > .close {
   width: 48rpx;
   height: 48rpx;
   margin-top: 60rpx;
   position: relative;
}

.mask-sign {
   position: absolute;
   width: 604rpx;
   height: 258rpx;
   top: 40rpx;
   left: 72rpx;
   z-index: 1000;
}

.mask-sign-list-wrap {
   width: 540rpx;
   height: 540rpx;
   border-radius: 10rpx;
   background: #fff;
   margin-top: 280rpx;
}

.mask-sign-list {
   width: 100%;
   display: flex;
   flex-direction: row;
   justify-content: flex-start;
   flex-wrap: wrap;
   margin-top: 60rpx;
}

.mask-sign-item {
   display: flex;
   flex-direction: column;
   align-items: center;
   background: #bb30c0;
   width: 105rpx;
   height: 150rpx;
   border-radius: 10rpx;
   font-size: 24rpx;
   margin-right: 20rpx;
   box-shadow: 2px 2px 5px #e4c6e4;
}

.mask-sign-item-current {
  background: #d85fb2;
  box-shadow: 2px 2px 5px #e0bfe1;
}

.mask-sign-item:first-child {
  margin-left: 30rpx;
}

.mask-sign-item:nth-child(5){
  margin-left: 30rpx;
}

.mask-sign-item:nth-child(5) , .mask-sign-item:nth-child(6), .mask-sign-item:nth-child(7){
  margin-top: 20rpx;
}

.mask-sign-item:nth-child(7){
   width: 230rpx;
}

.mask-sign-item > image{
  width: 52rpx;
  height: 52rpx;
  margin-top: 10rpx;
}

.mask-sign-item > .day {
  margin-top: 10rpx;
}

.mask-sign-item > .num {
  margin-top: 5rpx;
}

.mask-sign-list-wrap > button {
   width: 375rpx;
   height: 90rpx;
   border-radius: 45rpx;
   background: linear-gradient(to right, #d866db, #e565b1,#e64690, #e84081, #ee4f62); 
   color: #fff;
   font-size: 30rpx;
   margin-top: 30rpx;
   line-height: 90rpx;
}

button.signed {
   background: #a9a9a9;
}

.main-share {
   display: flex;
   width: 500rpx;
   height: 500rpx;
   flex-direction: column;
   align-items: center;
   border-radius: 10rpx;
   margin-top: 140rpx;
   position: relative;
}

.share-part {
   display: flex;
   width: 100%;
   height: 300rpx;
   flex-direction: column;
   align-items: center;
   position: relative;
   z-index: 100rpx;
}

.share-part2 {
   width: 100%;
   height: 200rpx;
   background: #fff;
   border-bottom-left-radius: 15rpx;
   border-bottom-right-radius: 15rpx;
}

.share-part2 > button {
    margin-top: 50rpx;
    background: linear-gradient(to right, #d866db, #e565b1,#e64690, #e84081, #ee4f62); 
    width: 380rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 40rpx;
    color: #fff;
    font-size: 30rpx;
}

.share-img {
   width: 500rpx;
   height: 300rpx;
   position: absolute;
   left: 0;
   top: 0;
}

.share-more {
   width: 390rpx;
   height: 66rpx;
   margin-top: 60rpx;
   margin-bottom: 20rpx;
}

.share-title {
   color: #f8d548;
   font-size: 36rpx;
}

.share-desp {
   color: #fff;
   font-size: 26rpx;
   margin-top: 15rpx;
}


.ad {
   position: fixed;
   width: 100%;
   bottom: 0rpx;
   left: 0;
}