/* pages/rule/rule.wxss */
.version {
   position: absolute;
   bottom: 40rpx;
   left: 0;
   text-align: center;
   font-size: 22rpx;
   color: #999;
   width: 100%;
}

.rule-list {
   width: 100%;
}
.rule-list-item {
   display: flex;
   flex-direction: row;
   width: 100%;
   align-items: flex-start;
   justify-content: flex-start;
   margin-top: 60rpx;
}

.rule-list-item:first-child {
   margin-top: 20rpx;
}

.rule-num {
   width: 70rpx;
   height: 70rpx;
   border-radius: 50%;
   background-color: white;
   color: #382198;
   font-size: 30rpx;
   text-align: center;
   line-height: 70rpx;
}

.rule-desp {
   width: 80%;
   font-size: 24rpx;
   margin-left: 50rpx;
}

.contact {
   width: 220rpx;
   height: 70rpx;
   border-radius: 35rpx;
   font-size: 30rpx;
   color: #382198;
   margin-top: 50rpx;
  
}

.report {
   display: flex;
   flex-direction: row;
   width: 100%;
   height: 40rpx;
   align-items: center;
   justify-content: center;
   font-size: 30rpx;
   margin-top: 30rpx;
   margin-bottom:30rpx;
   text-decoration: underline;
}

.report > image {
   width: 31rpx;
   height: 37rpx;
   margin-right: 10rpx;
}