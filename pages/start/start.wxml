<!--pages/start/start.wxml-->
<view class="container">
      <image class="main-bg" src='../../assets/images/main-bg.jpg' hidden='{{!isShowContent}}'></image>
      <image src="../../assets/images/loading.jpg" class="loading" hidden='{{isShowContent}}'></image>
      <view class="main-content" hidden='{{!isShowContent}}'>
          <view class="start-time">
            <view class="start-content">
               <view class="time-content" animation="{{timeAnimationDataGameStart}}">
                  <view  class="time-num">
                      <view animation="{{animationData3}}">3</view>
                  </view>
                  <view class="time-num" >
                      <view animation="{{animationData2}}" >2</view>
                  </view>
                  <view class="time-num" >
                      <view animation="{{animationData1}}">1</view>
                  </view>
                  <view class="time-num" >
                      <view animation="{{animationDataStart}}">开始</view>
                  </view>
              </view>
              <view class="game-content" animation="{{gameAnimationDataGameStart}}">
                    <view class="game-content-wrap">
                        <view class="process-info"> 
                           <view class='process-info-wrap'>
                              <view animation="{{animationDataProcess}}" class="process" />
                              <image class="bg" src='../../assets/images/rank-bg.png' />
                           </view>
                        </view>
                        <view class="question-in-all">已经连续答对 {{ rightNumber }}/{{count}}</view>
                        <view class="question-index">
                             <view class="line"></view>
                             <rich-text class="title">第<em style='color:#ff3e3e; font-weight: bold;'>{{currentIndex+1}}</em>题</rich-text>
                             <view class="line"></view>
                        </view>
                        <view class="question-info animated{{questionInfo.animate}}" >
                            <view>{{questionInfo.name}}</view>
                        </view>
                    </view>
              </view>
            </view>
            <view class="start-footer">
                <view class="start-footer-wrap">
                <view class="start-desp" animation="{{animationDataStartDesp}}">
                  <view class="title">挑战规则</view>
                  <view class="desp">连续答对{{count}}道题既挑战成功</view>
                </view>
                <view class="game-select animated{{questionInfo.animate}}" animation="{{animationDataSelect}}">
                <block wx:for="{{questionInfo.options}}" wx:for-index="index" wx:for-item="item" wx:key="id">
                    <view wx:if="{{ item.name != 'null' && item.name.length > 0 }}" animation="{{item.animate }}" class="option animated{{item.style}}" bindtouchstart='start' bindtouchend='end' bindtouchcancel='end' bindtap='answer' data-index='{{index}}'>
                        <view class="option2 {{item.style2}}">{{item.op}}. {{item.name}}</view>
                    </view>
                   </block>
                </view>
                </view>
            </view>
          </view>
      </view>
      <view class="mask mask-succ"  animation="{{animationDataMaskSucc}}">

          <view class="mask-content succ"  animation="{{animationDataSucc}}">
                                       <image class="succ-header" src='../../assets/images/succ.png'></image>
                 <image class="succ-title" src='../../assets/images/succ-title.png'></image>
                <view class="mask-main-content">
                    <view class="title">恭喜您是百分百的真球迷一枚！特送
一枚兑换金币，快去炫耀一下吧！</view>
                    <button class="continue" bindtap='navagateToPrizee'>兑换礼物</button>
                    <button class="invate-friend" open-type='share'>炫耀一下</button>
                </view>
                <image class="close" src='../../assets/images/close.png' bindtap='closeSucc'></image>
          </view>
      </view>
      <view class="mask mask-fail" animation="{{animationDataMaskFail}}">
          <view class="mask-content fail" animation="{{animationDataFail}}">
                <image class="fail" src="{{isHelp ? '../../assets/images/fail2.png' : '../../assets/images/fail.png'}}"></image>
                <view class="mask-main-content">
                    <view class="title">{{isHelp ? '不要放弃，继续挑战，相信你是可以的！' : '分享到群求助好友，接着挑战！'}}</view>
                    <button class="continue" wx:if="{{isHelp}}" bindtap='continuePlay'>继续挑战</button>
                    <button class="continue" wx:if="{{!isHelp}}" open-type='share'>求助好友</button>
                    <button class="invate-friend" bindtap='closeFail'>点击跳过</button>
                </view>
                <image class="close" src='../../assets/images/close.png' bindtap='closeFail'></image>
          </view>
      </view>
</view>
