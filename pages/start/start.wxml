<!--pages/start/start.wxml-->
<view class="container">
  <image class="miusc" catchtap='startMiusc' src='{{miuscImg}}' animation="{{animationDataMiuscRoate}}"></image>
   <view class="loading" hidden='{{isShowContent}}'>
       <image src="../../assets/images/loading.png"></image> 
</view>

  <view class="main-content" hidden='{{!isShowContent}}'>
    <view class="start-time">
      <view class="start-content">
        <view class="time-content" animation="{{timeAnimationDataGameStart}}">
          <view class="time-num">
            <view animation="{{animationData3}}">3</view>
          </view>
          <view class="time-num">
            <view animation="{{animationData2}}">2</view>
          </view>
          <view class="time-num">
            <view animation="{{animationData1}}">1</view>
          </view>
          <view class="time-num">
            <view animation="{{animationDataStart}}">开始</view>
          </view>
        </view>
      </view>
    </view>
    <view class="game-content" animation="{{gameAnimationDataGameStart}}">
      <view class="game-content-wrap">
        <rich-text class="question-in-all">
          <b style="color:#fff000;">{{ currentIndex+1 }}</b>/{{count}}</rich-text>
        <view class="process-info">
           <image src='../../assets/images/count-down.png'></image>
           <view class="{{questionInfo.lastStyle}}">
              0:{{ isShowStar ? questionInfo.t: "0"+questionInfo.preTime}}
          </view>
        </view>
        <view class="question-num" wx:if="{{!isShowStar}}">
           <view  wx:for="{{nums}}" wx:for-index="index" wx:for-item="item" wx:key="id" >
            {{item.num}}
           </view>
        </view>

        <view class="question-star" wx:if="{{isShowStar}}">
            <image wx:for="{{nums}}" wx:for-index="index" wx:for-item="item" wx:key="id" src='{{item.img}}'></image>
        </view>

        <view class="question-line">
           <view  wx:for="{{results}}" wx:for-index="index" wx:for-item="item" wx:key="id" >
                {{item}}
           </view>
        </view>

        <view class="numkeys">
            <view class="numkeys-item" wx:for="{{numkeys}}" wx:for-index="index" wx:for-item="item" wx:key="id" style='{{index == 9 || index == 11 ? "font-size: 36rpx;" : ""}}{{isShowStar ? "background:#fff;" : ""}}' data-index="{{index}}" bindtap='preAnswer'>
                {{item}}
            </view>
        </view>
      </view>

    </view>
  </view>


  <view class="mask mask-succ" animation="{{animationDataMaskSucc}}">
    <view class="mask-content succ" animation="{{animationDataSucc}}">
      <image class="succ-header" src='../../assets/images/succ-bg.png'></image>
      <view class="mask-main-content">
        <view class="title">恭喜获得红包</view>
        <view  class="double">
            <image src='../../assets/images/share-double.png'></image>
            <button open-type='share'></button>
        </view>
        <image class="hb" src='../../assets/images/get-hb.png' bindtap='navagateToPrizee'></image>
      </view>
      <image class="close" src='../../assets/images/close.png' bindtap='closeSucc'></image>
    </view>
  </view>

  <view class="mask mask-fail" animation="{{animationDataMaskFail}}">
    <view class="mask-content fail" animation="{{animationDataFail}}">
      <image class="fail-img" src="{{isHelp ? '../../assets/images/fail2.png' : '../../assets/images/fail1.png'}}"></image>
      <view class="mask-main-content">
        <!-- <image class="fail-img2" src='../../assets/images/fail-avatar.png'></image> -->
        <view class="title">{{isHelp ? '不要放弃，继续挑战，相信你是可以的！' : '真可惜答错了！分享到群求助好友，可以继续答题哦~'}}</view>
        <image class="continue" wx:if="{{isHelp}}" src='../../assets/images/start-continue.png' bindtap='continuePlay'></image>
        <view class="sshare" wx:if="{{!isHelp}}">
          <image src='../../assets/images/start-invite.png'  >继续挑战</image>
          <button class="continue" open-type='share'></button>
        </view>
         <image class="continue" wx:if="{{!isHelp}}" src='../../assets/images/start-continue2.png'></image>
 <image class="continue" wx:if="{{isHelp}}" src='../../assets/images/start-skip.png' bindtap='closeFail'></image>      </view>
      <image class="close" src='../../assets/images/close.png' bindtap='closeFail'></image>
    </view>
  </view>

<view class="mask mask-share" animation="{{animationDataMaskShare}}">
    <view class="mask-content share" animation="{{animationDataShare}}">
      <view class="main-share">
        <image class="share-img" src="../../assets/images/share-bg.png"></image>
        <view class="share-part">
          <image class="share-more" src="../../assets/images/share-more.png"></image>
          <view class="share-desp">分享到群,即可获得挑战机会</view>
          <view class="share-desp">今日分享过的群，不会得挑战机会哟</view>
        </view>
        <view class="share-part2">
         <view class="share-part2-wrapper">
          <image src='../../assets/images/share-btn.png'></image>
          <button open-type='share'></button>
          </view>
        </view>
      </view>

      <image class="close" src='../../assets/images/close.png' bindtap='closeShare'></image>
    </view>
    
  </view>
  
<ad wx:if="{{isOver}}" class="ad" unit-id="adunit-5bbe4c44de92a233"></ad>
</view>