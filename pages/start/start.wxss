/* pages/start/start.wxss */
@import "../../assets/css/animate.min.wxss";
.start-content {
   background-color: #1c8a24;
   width: 100%;
   height: 560rpx;
   position: relative;
   border-radius: 25rpx;
   overflow: hidden;
}

.time-content {
   background-color: #ffffff;
   width: 632rpx;
   height: 530rpx;
   margin-left: 15rpx;
   margin-top: 15rpx;
   position: absolute;
   border-radius: 25rpx;
}

.game-content {
   display: flex;
   justify-content: center;
   background-color: #fff;
   width: 632rpx;
   height: 530rpx;
   border-radius: 25rpx;
   position: absolute;
   top: -630rpx;
   opacity: 0;
   margin-left: 15rpx;
   margin-top: 15rpx;
}


.time-num {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top:0;
  display: flex;
  color: #1c8a24;
  justify-content: center;
  align-items: center;
  font-size: 300rpx;
  
}

.time-num > view {
    text-align: center;
    width: 100%;
    opacity: 0;
}

.start-desp > .title {
    font-size: 48rpx;
    width: 100%;
    text-align: center;
}

.start-desp > .desp {
    font-size: 30rpx;
    width: 100%;
    text-align: center;
    margin-top: 10rpx;
}

.game-content-wrap { 
   display: flex;
   flex-direction: column;
   align-items: center;
   width: 570rpx;
   height: 100%;
   color: black;
}

.process-info {
   width: 509.5rpx;
   height: 49.5rpx;
   background: #1c8a24;
   border-radius: 25rpx;
   margin-top: 70rpx;
  
}

.process-info-wrap {
  width: 500rpx;
  height: 40rpx;
  border-radius: 25rpx;
  background: #d3ffd6;
  margin-left: 5rpx;
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
}

.process-info-wrap > image {
   height: 58rpx;
   width: 58rpx;
   border-radius: 50%;
   border: solid #1c8a24 5rpx;
   margin-top: -10rpx;
   margin-left: -15rpx;
}


.process {
   width: 0;
   height: 100%;
   border-top-left-radius: 25rpx;
   border-bottom-left-radius: 25rpx;
   background: #ffde00;
    
}


.question-in-all {
   font-size: 30rpx;
   margin-top: 40rpx;
}

.question-index {
  display: flex;
  width: 100%;
  height: 40rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.question-index > .line {
   width: 80rpx;
   height: 2rpx;
   background-color: #382198;
}

.question-index > .title {
   font-size: 36rpx;
   margin-left: 30rpx;
   margin-right: 30rpx;
}

.question-info {
   width: 100%;
   height: 210rpx;
   background-color: #fffed3;
   font-size: 36rpx;
   color: #9f0808;
}

.question-info > view {
   padding: 20rpx;
}

.start-footer {
   width: 100%;
   height: 528rpx;
   margin-top: 50rpx;
}

.start-footer-wrap {
   position: relative;
   width: 100%;
   height: 528rpx;
   overflow: hidden;
}

.start-desp {
   position: absolute;
   width: 100%;
}

.game-select {
   position: absolute;
   width: 100%;
   height: 528rpx;
   top: 528rpx;
   opacity: 0;
}

.option {
   background-color: #89a385;
   border-radius: 10rpx;
   width: 100%;
   height: 112rpx;
   margin-bottom: 20rpx;
}

.option2 {
   background-color: #fff;
   border-radius: 10rpx;
   width: 100%;
   height: 100rpx;
   text-align: center;
   line-height: 100rpx;
   color: #000;
   font-size: 42rpx;
}

.game-select image {
   height: 315rpx;
   width: 300rpx;
}

.mask {
   position: fixed;
   width: 100%;
   height: 100%;
   background: rgba(0,0,0,0.7);
   display: flex;
   flex-direction: column;
   align-items: center;
   top:0;
   left:0;
}

.mask-content {
   display: flex;
   flex-direction: column;
   width: 100%;
   height: 100%;
   align-items: center;
   top: -100%;
   opacity: 0;
   position: relative;
   margin-top: 200rpx;
}



.succ {
  justify-content: flex-start;
  margin-top: 0rpx;
}

.mask-content > .fail {
   width: 470rpx;
   height: 131rpx;
   position: relative;
   top: 50rpx;
   left: 23rpx;
}

.mask-main-content {
   display: flex;
   flex-direction: column;
   justify-content:flex-start;
   align-items: center;
   width: 510rpx;
   height: 430rpx;
   background-color: #fff;
   border-radius: 15rpx;

}


.mask-content > .close {
   width: 48rpx;
   height: 48rpx;
   margin-top: 60rpx;
}

.mask-main-content > .title {
   font-size: 28rpx;
   color: #000;
   width: 440rpx;
   margin-left: 35rpx;
   margin-right: 35rpx;
   margin-top: 60rpx;
   text-align: center;
}

.succ .title {
   width: 460rpx;
   margin-top: 40rpx;
}

.succ .mask-main-content {
   height: 430rpx;
   margin-top: 385rpx;
}


.mask-main-content > .continue {
   font-size: 30rpx;
   height: 90rpx;
   width: 380rpx;
   border-radius: 45rpx;
   line-height: 90rpx;
   background-color: #1c8a24;
   color: #fff;
   margin-top: 40rpx;
}

.mask-main-content > .invate-friend {
   font-size: 30rpx;
   height: 90rpx;
   width: 380rpx;
   border-radius: 45rpx;
   line-height: 90rpx;
   background-color: #fff;
   border: solid 2rpx #1c8a24;
   color: #1c8a24;
   margin-top: 30rpx;
}

 .succ-header {
   width: 750rpx;
   height: 500rpx;
   position: absolute;
   top: 100rpx;
   left: 0;
   z-index: -1;
}

.succ-title {
   top: 300rpx;
   left: 165rpx;
   width: 460rpx;
   height: 120rpx;
   position: absolute;
}


.mask-succ {
   opacity: 0;
   top: -100%;
}

.mask-fail {
   opacity: 0;
   top: -100%;
}

.right {
  background: #1c8a24;
  color: #fff;
}

.right2 {
  color: #fff;
  background: #4aac51;
}

.error {
  color: #fff;
  background: #c45a5a;
}

.error2 {
  color: #fff;
  background: #d47676;
}